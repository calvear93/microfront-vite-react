{
	"[html][json][jsonc][markdown][css][less][scss]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascript][typescript][javascriptreact][typescriptreact]": {
		"editor.defaultFormatter": "dbaeumer.vscode-eslint"
	},
	"css.lint.unknownAtRules": "ignore",
	"editor.detectIndentation": true,
	"editor.linkedEditing": true,
	"editor.rulers": [80, 100],
	"eslint.format.enable": true,
	"eslint.lintTask.enable": true,
	"eslint.probe": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"eslint.trace.server": "off",
	"eslint.useESLintClass": true,
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.expand": false,
	"explorer.fileNesting.patterns": {
		"*.cjs": "${capture}.cjs.*",
		"*.env.json": "${capture}.*.env.json",
		"*.json": "${capture}.json",
		"*.mjs": "${capture}.mjs.*",
		"*.ts": "${capture}.*",
		"*.tsx": "${capture}.*",
		".eslintrc*": ".eslintignore, .prettierrc*, .prettierignore, .stylelintrc*, .stylelintignore",
		"README*": "CHANGELOG*, LICENSE*",
		"package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, pnpm-workspace.yaml, package.release.json, .npmrc, .syncpackrc.json",
		"tsconfig.json": "tsconfig.*.json",
		"vite.config.ts": "vitest.config.ts, unocss.config.ts"
	},
	"explorer.incrementalNaming": "smart",
	"explorer.sortOrder": "type",
	"files.exclude": {
		"**/*.log": true,
		"**/*.tsbuildinfo": true,
		"**/.DS_Store": true,
		"**/.git": true,
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/.hg": true,
		"**/.history/**": true,
		"**/.svn": true,
		"**/CVS": true,
		"**/bower_components/**": true,
		"**/desktop.ini": true,
		"**/folderico*.ico": true,
		"**/node_modules/**": true
	},
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"html.autoClosingTags": true,
	"javascript.autoClosingTags": true,
	"prettier.useTabs": true,
	"scss.lint.unknownAtRules": "ignore",
	"search.exclude": {
		"**/.rollup.cache": true,
		"**/.vscode": true,
		"**/build": true,
		"**/coverage": true,
		"**/dist": true,
		"**/package-lock.json": true,
		"**/pnpm-lock.yaml": true
	},
	"stylelint.packageManager": "pnpm",
	"stylelint.snippet": ["css", "postcss", "scss", "sass"],
	"stylelint.validate": ["css", "postcss", "scss", "sass"],
	"typescript.autoClosingTags": true,
	"typescript.suggest.autoImports": true,
	"typescript.tsdk": "node_modules\\typescript\\lib",
	"typescript.validate.enable": true
}
